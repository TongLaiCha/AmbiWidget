<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <!--Top row-->
        <RelativeLayout
            android:id="@+id/top_row"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!--Settings button-->
            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:src="@drawable/ic_icn_settings_24px" />

            <!--Device previous (left)-->
            <ImageButton
                android:id="@+id/device_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/button_settings"
                android:background="@color/white"
                android:rotation="180"
                android:src="@drawable/ic_icn_arrow_next" />

            <!--Device name-->
            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:textSize="13sp"
                tools:text="Device name" />

            <!--Device next (right)-->
            <ImageButton
                android:id="@+id/device_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/button_refresh"
                android:background="@color/white"
                android:src="@drawable/ic_icn_arrow_next" />

            <!--Refresh button-->
            <ImageButton
                android:id="@+id/button_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:src="@drawable/ic_icn_reload_24px" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="2dp"
                android:indeterminateTint="@color/black"
                android:visibility="gone" />

        </RelativeLayout>

        <!--AC stats row-->
        <LinearLayout
            android:id="@+id/stats_row"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temperature_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_padding"
                android:src="@drawable/ic_icn_acmode_temperature" />

            <TextView
                android:id="@+id/temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_padding"
                android:textSize="13sp"
                tools:text="23.1" />

            <ImageView
                android:id="@+id/humidity_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/icon_margin"
                android:paddingBottom="@dimen/text_padding"
                android:src="@drawable/ic_icn_glossary_humidity" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_padding"
                android:textSize="13sp"
                tools:text="61.4" />

            <ImageView
                android:id="@+id/mode_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/icon_margin"
                android:paddingBottom="@dimen/text_padding"
                android:src="@drawable/ic_icn_acmode_mode" />

        </LinearLayout>

        <!--Mode button's row container-->
        <LinearLayout
            android:id="@+id/feedback_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <!--style="@style/feedback_buttons_section">-->

            <!--Empty-->
            <LinearLayout
                android:id="@+id/container_btn_empty1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="Suspicious0dp">

            </LinearLayout>

            <!--Empty-->
            <LinearLayout
                android:id="@+id/container_btn_empty2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_empty"
                android:orientation="horizontal"
                tools:ignore="Suspicious0dp">

            </LinearLayout>

            <!--Decrease desired temperature-->
            <LinearLayout
                android:id="@+id/container_btn_decrease_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_mode_selector"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_decrease_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/comfy"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icn_minus_small" />

                <ProgressBar
                    android:id="@+id/progress_decrease_temperature"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!--Desired temperature-->
            <LinearLayout
                android:id="@+id/container_desired_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_mode_selector"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="Suspicious0dp">

                <TextView
                    android:id="@+id/desired_temperature_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="26"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <!--Add desired temperature-->
            <LinearLayout
                android:id="@+id/container_btn_add_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_mode_selector"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_add_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icn_add_small" />

                <ProgressBar
                    android:id="@+id/progress_add_temperature"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <!--Button mode selection-->
            <LinearLayout
                android:id="@+id/container_btn_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_on_off"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <Button
                    android:id="@+id/button_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_selector_on_off"
                    android:text="MODE"
                    android:textColor="@color/white"/>

                <ProgressBar
                    android:id="@+id/progress_mode"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>