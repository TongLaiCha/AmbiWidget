<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin">

        <!--Top row-->
        <RelativeLayout
            android:id="@+id/top_row"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!--Settings button-->
            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:src="@drawable/ic_icn_settings_24px" />

            <!--Device previous (left)-->
            <ImageButton
                android:id="@+id/device_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/button_settings"
                android:layout_marginStart="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_icn_arrow_next"
                android:rotation="180"/>

            <!--Device name-->
            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                tools:text="Device name"
                android:textSize="13sp"/>

            <!--Device next (right)-->
            <ImageButton
                android:id="@+id/device_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/button_refresh"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_icn_arrow_next"/>

            <!--Refresh button-->
            <ImageButton
                android:id="@+id/button_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:src="@drawable/ic_icn_reload_24px" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="2dp"
                android:layout_alignParentEnd="true"
                android:indeterminateTint="@color/black"
                android:visibility="gone"/>

        </RelativeLayout>

        <!--AC stats row-->
        <LinearLayout
            android:id="@+id/stats_row"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temperature_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_padding"
                android:src="@drawable/ic_icn_acmode_temperature" />

            <TextView
                android:id="@+id/temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_padding"
                tools:text="23.1"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/humidity_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_padding"
                android:layout_marginStart="@dimen/icon_margin"
                android:src="@drawable/ic_icn_glossary_humidity" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_padding"
                tools:text="61.4"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/mode_svg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/icon_margin"
                android:paddingBottom="@dimen/text_padding"
                android:src="@drawable/ic_icn_acmode_mode"/>

        </LinearLayout>

        <!--Feedback button's row container-->
        <LinearLayout
            android:id="@+id/feedback_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal" >
            <!--style="@style/feedback_buttons_section">-->

            <!--Button too warm-->
            <LinearLayout
                android:id="@+id/container_btn_too_warm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_too_warm"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_too_warm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir_next_medium"
                    android:textStyle="bold"
                    android:contentDescription="@string/too_warm"
                    android:src="@drawable/ic_sad"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <ProgressBar
                    android:id="@+id/progress_too_warm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--Button bit warm-->
            <LinearLayout
                android:id="@+id/container_btn_bit_warm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_bit_warm"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_bit_warm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir"
                    android:textStyle="bold"
                    android:contentDescription="@string/bit_warm"
                    android:src="@drawable/ic_indifferent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <ProgressBar
                    android:id="@+id/progress_bit_warm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--Button comfy-->
            <LinearLayout
                android:id="@+id/container_btn_comfy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_comfy"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_comfy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir"
                    android:textStyle="bold"
                    android:contentDescription="@string/comfy"
                    android:src="@drawable/ic_happiness"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <ProgressBar
                    android:id="@+id/progress_comfy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--Button bit cold-->
            <LinearLayout
                android:id="@+id/container_btn_bit_cold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_bit_cold"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_bit_cold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir"
                    android:textStyle="bold"
                    android:contentDescription="@string/bit_cold"
                    android:src="@drawable/ic_indifferent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <ProgressBar
                    android:id="@+id/progress_bit_cold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--Button too cold-->
            <LinearLayout
                android:id="@+id/container_btn_too_cold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_too_cold"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_too_cold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir"
                    android:textStyle="bold"
                    android:contentDescription="@string/too_cold"
                    android:src="@drawable/ic_sad"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

                <ProgressBar
                    android:id="@+id/progress_too_cold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

            <!--Button mode selection-->
            <LinearLayout
                android:id="@+id/container_btn_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/button_selector_on_off"
                android:gravity="center"
                android:layout_weight="1"
                tools:ignore="Suspicious0dp">

                <ImageButton
                    android:id="@+id/button_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_on_off"
                    android:src="@drawable/ic_icn_acmode_mode"/>

                <ProgressBar
                    android:id="@+id/progress_mode"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>